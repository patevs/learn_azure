{
    "name": "learn_azure",
    "version": "0.17.2",
    "description": "Links, resources, and code related to my learning of Azure cloud services",
    "author": "PatEvs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/patevs/learn_azure.git"
    },
    "scripts": {
        "updates": "npx ncu",
        "release": "npx np"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "commitlint-config-gitmoji": "^2.2.3",
        "husky": "^4.3.6"
    },
    "commitlint": {
        "extends": [
            "gitmoji"
        ],
        "rules": {
            "subject-empty": [
                0,
                "never"
            ],
            "type-empty": [
                0,
                "never"
            ]
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
